<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.canvas.Canvas?>


<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.paintp.HelloController">
  <MenuBar>
    <Menu text="File">
      <MenuItem text="New" onAction="#onNewMenuClick"/>
      <MenuItem text="Open Image" onAction="#onOpenImageClick"/>
      <MenuItem text="Safe" onAction="#onSafeClick"/>
      <MenuItem text="Safe as" onAction="#onSafeAsClick"/>
      <MenuItem text="Exit" onAction="#onExitMenuClick"/>
    </Menu>
    <Menu text="Edit">
      <MenuItem text="Cut" onAction="#onCutMenuClick"/>
      <MenuItem text="Copy" onAction="#onCopyMenuClick"/>
      <MenuItem text="Paste" onAction="#onPasteMenuClick"/>
    </Menu>
    <Menu text="Help">
      <MenuItem text="About" onAction="#onAboutMenuClick"/>
    </Menu>
    <Menu text="Canva">
      <MenuItem text="Clear canva" onAction="#onCanvaClearCanva"/>
    </Menu>
  </MenuBar>


  <Label fx:id="welcomeText" alignment="CENTER" text="Welcome to Paint-P!" />

  <StackPane fx:id="canvasPane" alignment="CENTER" prefWidth="800" prefHeight="600">
    <Canvas fx:id="canvas" width="800" height="600"/>
  </StackPane>

</VBox>
