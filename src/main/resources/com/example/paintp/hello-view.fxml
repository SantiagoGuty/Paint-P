<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ScrollPane?>

<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Slider?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.example.paintp.HelloController">

  <MenuBar>
    <Menu text="File">

      <MenuItem onAction="#onNewMenuClick" text="New" />
      <Menu text="Open Image">
        <MenuItem onAction="#onOpenImageClickCanvaSize" text="Canva size" />
        <MenuItem onAction="#onOpenImageClickOriginalSIze" text="Original size" />
      </Menu>
      <MenuItem onAction="#onSafeClick" text="Save" />
      <MenuItem onAction="#onSafeAsClick" text="Save as" />
      <MenuItem onAction="#onExitMenuClick" text="Exit" />

    </Menu>

    <Menu text="Edit">

      <MenuItem onAction="#onCutMenuClick" text="Cut" />
      <MenuItem onAction="#onCopyMenuClick" text="Copy" />
      <MenuItem onAction="#onPasteMenuClick" text="Paste" />

    </Menu>

    <Menu text="Help">

      <MenuItem onAction="#onAboutMenuClick" text="About" />

    </Menu>
    <Menu text="Canva">

      <MenuItem onAction="#onCanvaClearCanva" text="Clear canva" />

      <Menu text="Resize canva">

        <MenuItem onAction="#set_windows_size_canva" text="Window size canva" />
        <MenuItem onAction="#set_wide_canva" text="Set wide canva" />
        <MenuItem onAction="#set_tall_canva" text="Set tall canva" />

      </Menu>

    </Menu>

  </MenuBar>


  <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #f0f0f0;">
  <ButtonBar>
      <buttons>
        <ToggleButton fx:id="pincel_button" text="Brush" mnemonicParsing="false" />
        <Button text="Undo" onAction="#onUndoClick"/>
        <Button text="Redo" onAction="#onRedoClick"/>
      </buttons>
    </ButtonBar>
    <Separator orientation="VERTICAL" />
    <VBox alignment="CENTER" spacing="10">

      <Label text="Choose Color:" />
      <ColorPicker fx:id="colorPicker" />

    </VBox>
    <VBox alignment="CENTER" spacing="10">

      <Label text="Line Width:" />
      <Slider fx:id="lineWidthSlider" min="1" max="10" value="2" showTickLabels="true" showTickMarks="true" />

    </VBox>
  </HBox>

  <ScrollPane fx:id="scrollPanel" fitToHeight="true" fitToWidth="true">
    <StackPane fx:id="canvasPane"  prefHeight="600" prefWidth="800" style=" -fx-background-color: lightgray; -fx-border-color: grey; -fx-border-width: 1px;">

      <Canvas fx:id="canvas" height="600" width="800" />

    </StackPane>
  </ScrollPane>


  <Label fx:id="welcomeText" alignment="CENTER" text="Welcome to Paint-P!" />

</VBox>
